<h1>Counter</h1>

<p>Current count: @currentCount</p>
<button class="btn btn-primary" @onclick="IncreaseCount">Click you</button>

@code {
    int currentCount;

    [Parameter]
    public int IncreaseAmount { set; get; } = 1;

    void IncreaseCount()
    {
        currentCount += IncreaseAmount;
        if (currentCount > 100)
            throw new Exception("No way");
    }

}